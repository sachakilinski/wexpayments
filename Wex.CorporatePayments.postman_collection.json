    {
      "name": "Idempotency Tests (I-01)",
      "item": [
        {
          "name": "I-01: 1. Create Purchase (First Time)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Idempotency Test Purchase\",\n  \"transactionDate\": \"2025-12-14T10:30:00Z\",\n  \"amount\": 250.00,\n  \"currency\": \"USD\",\n  \"idempotencyKey\": \"{{idempotencyKeyTest}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/purchases",
              "host": ["{{baseUrl}}"],
              "path": ["api", "purchases"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Verifica se a criação foi bem-sucedida (Status 201)",
                  "pm.test(\"Status code is 201 Created on first attempt\", function () {",
                  "    pm.expect(pm.response.code).to.equal(201);",
                  "});"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "I-01: 2. Repeat Purchase (Second Time)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Idempotency Test Purchase\",\n  \"transactionDate\": \"2025-12-14T10:30:00Z\",\n  \"amount\": 250.00,\n  \"currency\": \"USD\",\n  \"idempotencyKey\": \"{{idempotencyKeyTest}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/purchases",
              "host": ["{{baseUrl}}"],
              "path": ["api", "purchases"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Verifica o comportamento idempotente",
                  "pm.test(\"Status code is 409 Conflict or 200/201 OK on repeat attempt\", function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 409]);",
                  "});",
                  "",
                  "// Se a implementação retorna 201/200 com o ID existente, podemos verificar:",
                  "if (pm.response.code < 300) {",
                  "    pm.test(\"Response ID matches previously stored ID\", function () {",
                  "        pm.expect(pm.response.json().id).to.equal(pm.collectionVariables.get('purchaseId'));",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:7000",
      "type": "string"
    },
    {
      "key": "purchaseId",
      "value": "",
      "type": "string",
      "description": "Captured ID from the first successful purchase creation."
    },
    {
      "key": "idempotencyKeyTest",
      "value": "UNIQUE-TEST-KEY-{{$timestamp}}",
      "type": "string",
      "description": "Used specifically for Idempotency Tests (I-01). The timestamp ensures it's fresh for each runner execution."
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Store purchaseId from create purchase response for subsequent GETs/Validations",
          "if (pm.response.code === 201 && pm.request.method === 'POST') {",
          "    const response = pm.response.json();",
          "    if (response.id) {",
          "        pm.collectionVariables.set('purchaseId', response.id);",
          "        console.log('Stored purchaseId:', response.id);",
          "    }",
          "}",
          "",
          "// Basic response validation - checks all common successful and expected error codes",
          "pm.test('Status code is expected (200, 201, 400, 404, 409)', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 400, 404, 409]);",
          "});"
        ]
      }
    }
