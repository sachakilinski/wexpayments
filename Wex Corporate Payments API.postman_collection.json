		{
			"name": "Idempotency Tests (I-01)",
			"item": [
				{
					"name": "I-01: 1. Create Purchase (First Time)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Verifica se a criação foi bem-sucedida (Status 201)",
									"pm.test(\"Status code is 201 Created on first attempt\", function () {",
									"    pm.expect(pm.response.code).to.equal(201);",
									"});"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"description\": \"Idempotency Test Purchase\",\n  \"transactionDate\": \"2025-12-14T10:30:00Z\",\n  \"amount\": 250.00,\n  \"idempotencyKey\": \"aaaa\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/purchases",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"purchases"
							]
						}
					},
					"response": []
				},
				{
					"name": "I-01: 2. Repeat Purchase (Second Time)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Verifica o comportamento idempotente",
									"pm.test(\"Status code is 409 Conflict or 200/201 OK on repeat attempt\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 201, 409]);",
									"});",
									"",
									"// Se a implementação retorna 201/200 com o ID existente, podemos verificar:",
									"if (pm.response.code < 300) {",
									"    pm.test(\"Response ID matches previously stored ID\", function () {",
									"        pm.expect(pm.response.json().id).to.equal(pm.collectionVariables.get('purchaseId'));",
									"    });",
									"}"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"description\": \"Idempotency Test Purchase\",\n  \"transactionDate\": \"2025-12-14T10:30:00Z\",\n  \"amount\": 250.00,\n  \"idempotencyKey\": \"aaaa\"\n}"
						},
