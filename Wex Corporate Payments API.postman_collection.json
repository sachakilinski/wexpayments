	"event": [
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Store purchaseId from create purchase response for subsequent GETs/Validations",
					"if (pm.response.code === 201 && pm.request.method === 'POST') {",
					"    const response = pm.response.json();",
					"    if (response.id) {",
					"        pm.collectionVariables.set('purchaseId', response.id);",
					"        console.log('Stored purchaseId:', response.id);",
					"    }",
					"}",
					"",
					"// Basic response validation - checks all common successful and expected error codes",
					"pm.test('Status code is expected (200, 201, 400, 404, 409)', function () {",
					"    pm.expect(pm.response.code).to.be.oneOf([200, 201, 400, 404, 409]);",
					"});"
				]
			}
		}
